{
  "extends": "airbnb-base",
  "rules": {
    "max-len": [
      2,
      {
        "code": 1000,
        "tabWidth": 4,
        "ignoreUrls": true
      }
    ],
    "no-await-in-loop": "off",
    "no-constant-condition": "off",
    "no-console": [
      "error",
      {
        "allow": [
          "log", "error", "time", "timeEnd"
        ]
      }
    ]
  },
  "settings": {
    "import/core-modules": [
      "aws-sdk",
      "dotenv"
    ]
  }
}
